@{
    ViewData["Title"] = "ShowCase";
    var caseName = (ViewData["CaseName"] as string)?.Trim();
}

<div class="flex flex-col min-h-screen p-8">
    <h1 class="text-2xl font-bold mb-4">ShowCase: @caseName</h1>
    <div class="flex-1 flex flex-col">
        @if (!string.IsNullOrEmpty(caseName))
        {
            try
            {
                @await Html.PartialAsync($"_{caseName}Partial")
            }
            catch
            {
                <p class="text-red-600">No showcase found for <strong>@caseName</strong></p>
            }
        }
        else
        {
            <p class="text-red-600">No showcase found for <strong>@caseName</strong></p>
        }
    </div>
</div>
