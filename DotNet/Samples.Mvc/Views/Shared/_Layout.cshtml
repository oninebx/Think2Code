<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Samples.Mvc</title>
    <script src="https://cdn.jsdelivr.net/npm/@@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Samples.Mvc.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between border-b border-gray-200">
                <a class="text-xl font-bold text-gray-900" asp-area="" asp-controller="Home" asp-action="Index">Samples.Mvc</a>
                <ul class="flex space-x-4">
                    <li>
                        <a class="text-gray-700 hover:text-blue-600 transition" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="max-w-7xl mx-auto px-4">
        <main class="py-6">
            @RenderBody()
        </main>
    </div>
    <footer class="border-t text-gray-500 mt-8">
        <div class="max-w-7xl mx-auto px-4 py-4">
            &copy; 2025 - Samples.Mvc - <a class="hover:text-blue-600 transition" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
